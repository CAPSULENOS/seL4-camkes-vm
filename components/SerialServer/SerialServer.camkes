import <GetChar.idl4>;
import <PutChar.idl4>;
import <Timer.idl4>;

component SerialServer {
    control;
    has mutex serial;

    provides PutChar vm_putchar;
    provides PutChar guest_putchar;

    provides GetChar getchar;

    uses Timer timeout;

    uses IOPort serial_port;
    consumes Irq4 serial_irq;
}
